<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" type="text/css" href="/css/am.css">
    <script src="/js/general.js"></script>
    <title> <%= title %> </title>
  </head>
  <body>
    <div class="w3-display-container" style="width:100%;">
      <img src="<%=image%>" alt="" style="width: 100%;">

      <!-- LINKS -->
      <% links.forEach(function(link){ %>
        <button class="<%=link.container%> w3-container w3-button w3-opacity" style="height:<%=link.height;%>; width:<%=link.width;%>;" onclick="location.href='/t?src=<%=endpoint%>&dst=<%=link.dest;%>';"></button>
      <% }); %>


      <!-- LAST -->
      <div class="w3-display-bottommiddle w3-center cm-scroll-indicator w3-large " style="transform: translate(-50%, -350%)">
        Read more <br>
        <img src="/static/triangle.png" alt="" style="width:4%;">
      </div>
    </div>

    <!-- INFOPANE // CONTENT AREA-->
    <div class="w3-container cm-infopane">
      <div class="w3-container cm-textbox">
        <%- include(content) %>
      </div>
    </div>

    <!-- HEADER -->
    <button class="w3-center w3-button cm-home-header" onclick="location.href='/t/?src=<%=endpoint%>&dst=home';" style="width:100%;"> HOME </button>
    <!--FOOTER -->
    <div class="w3-container cm-footer w3-center w3-padding">
      <hr>
      <a href="https://comcastmediatechcenter.org/">
        <img src="/static/cmtc.png" alt="" class="w3-image">
      </a>
      <br> <br>
      <a href="https://testflight.apple.com/join/iJlZcYOz">
        <img src="/static/appstore.svg" alt="" style="width:200px;" class="w3-image" onclick="location.href='https://testflight.apple.com/join/iJlZcYOz'">
      </a>
      <br> <br>
      <a href="/w2m.apk">
        <img src="/static/playstore.png" alt="" style="width:200px;" class="w3-image">
      </a>
    </div>
  </body>
</html>
